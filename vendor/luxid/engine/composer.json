{
  "name": "luxid/engine",
  "description": "The core engine of Luxid PHP Framework",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "framework",
    "php",
    "luxid",
    "mvc"
  ],
  "autoload": {
    "psr-4": {
      "Luxid\\": "Engine/",
      "Luxid\\Console\\": "Engine/Console/"
    },
    "files": [
      "Engine/helpers.php"
    ]
  },
  "bin": [
    "juice"
  ],
  "scripts": {
    "post-install-cmd": [
      "chmod +x juice 2>/dev/null || true"
    ],
    "post-update-cmd": [
      "chmod +x juice 2>/dev/null || true"
    ]
  },
  "authors": [
    {
      "name": "Jhay",
      "email": "jhay@luxid.dev"
    }
  ],
  "require": {
    "php": "^8.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
